
@{
    ViewBag.Title = "DangNhap";
}
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
   
</head>

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 500px;">
        <!-- Header Tab -->
        <div class="card-header tab-container">
            <div class="tab-active-bg" id="tab-bg"></div>
            <button id="nut-dangnhap" class="btn-tab">Đăng Nhập</button>
            <button id="nut-dangky" class="btn-tab">Đăng Ký</button>
        </div>

        <!-- Body: Form Container -->
        <div class="card-body form-container">
            <!-- Form Đăng Nhập -->
            <div id="dangnhapform" class="dangnhapform active-form d-flex justify-content-center align-items-center">
                <form action="@Url.Action("DangNhap", "Account")" method="post" class="w-100" style="max-width: 450px;">
                    @Html.AntiForgeryToken()
                    <div class="ms-5 ps-2 mt-5">
                        <!-- Username -->
                        <div class="my-3 input-group-lg">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" class="form-control" placeholder="Tên Đăng Nhập" aria-label="Username" required>
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="mb-3 input-group-lg">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input type="password" class="form-control" placeholder="Mật Khẩu" aria-label="Password" required>
                            </div>
                        </div>
                    </div>
                    <!-- Links -->
                    <div class="d-flex justify-content-center align-items-center my-4 mx-4">
                        <small>
                            Bạn quên mật khẩu?
                            <a href="#" class="text-success">Click here</a>
                        </small>
                    </div>

                    <!-- Button -->
                    <div class="mb-3 text-center ">
                        <button type="submit" class="btn btn-success w-50 ">Đăng Nhập</button>
                    </div>
                </form>
            </div>

            <!-- Form Đăng Ký -->
            <div id="dangkyform" class="dangkyform">
                <form action="@Url.Action("Register", "Account")" method="post" class="w-100" style="max-width: 450px;">
                    @Html.AntiForgeryToken()
                    <div class="ms-5 ps-5">
                        <!-- Username -->
                        <div class="my-3 input-group-lg">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" class="form-control" placeholder="Tên Đăng Nhập" aria-label="Username" required>
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="mb-3 input-group-lg">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input type="password" class="form-control" placeholder="Mật Khẩu" aria-label="Password" required>
                            </div>
                        </div>
                        <!-- Email -->
                        <div class="mb-3 input-group-lg">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input type="email" class="form-control" id="email-dangky" placeholder="Email" name="Email" required />
                            </div>
                        </div>
                        <!-- Số điện thoại -->
                        <div class="mb-3 input-group-lg">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                <input type="text" class="form-control" id="sodt-dangky" placeholder="Số điện thoại" name="Phone" required />
                            </div>
                        </div>

                    </div>
                    <div class="mb-3 text-center ">
                        <button type="submit" class="btn btn-success ms-5 w-50">Đăng Ký</button>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/DangNhap.js"></script>
}